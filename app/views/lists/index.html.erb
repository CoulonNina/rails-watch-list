
  
  
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">Watch List</a>
        <%= link_to "Add a new list", new_list_path, class: 'btn btn-success' %>
  </nav>
<div class="container">
        
   <div class="cards">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <% end %>
          <p> <%= link_to list.name, list_path(list) %></p>
        </div>
    <% end %>
  </div>
</div>

